{% extends 'layout.twig' %}
{% block profile_content %}
<div class="row">
	<h1>Create a video</h1>
	<form action="/profile/video/new" method="POST" class="form-horizontal col-md-8" name="video-from-url">
        {%for field in form.getFields()%}
           <div class="form-group">
                {%autoescape false%}{{field.toHTML()}}{%endautoescape%}
           </div> 
        {%endfor%}
		<div class="form-group text-muted">
            supports : 
            <ul>
                <li> youtube videos (ex: https://www.youtube.com/watch?v=JEF6_XC-2ZU ) </li>
                <li> vimeo (ex: https://vimeo.com/56166857) </li>
                <li> dailymotion (ex: https://www.dailymotion.com/video/xvtlja) </li>
            </ul>
		</div>
		<div class="form-group">
			<input type="reset" class="btn btn-default">
			<input type="submit"  class="btn btn-default">
		</div>
		<input type="hidden" name="_csrf" id="_csrf" value="{{_csrf}}">
	</form>
</div>
{% endblock %}
