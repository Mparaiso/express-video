{% extends 'layout.twig' %}
{% block content %}
<section class="row">
	<article class="col-md-8">
		{%autoescape false %}{{player}}{%endautoescape%}
		<div>
			<h3>{{video.title}} </h3>
			<h4><small>{{video.updated_at.toString()}}</small></h4>
			<span>{{video.description}}</span>
			<span class="owner">{{video.owner||"anonymous"}}</span>
		</div>
		<div>&nbsp;</div>
	</article>
	<aside class="col-md-4">
		{% for video in videos %}
		<div class='row'>
			<div class="col-md-6">
				<a href="/video/{{video.id}}">
					<img width="100%" class="thumbnail" src="{{video.thumbnail}}" alt="{{video.title}}"/>
				</a>
			</div>
			<div class="col-md-6">{{video.title}}</div>
			<div>&nbsp;</div>
		</div>
		{% endfor %}
	</aside>
</section>
{% endblock %}