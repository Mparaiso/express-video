{# a video from a playlist , with other videos from the same playlist the right hand  #}
{% extends 'layout.twig' %}
{% block title %} {{title}} -- {{video.title}} {%endblock%}
{% block content %}
<section class="row">
	{%include 'includes/video-read.twig'%}
	<aside class="col-md-4">
		<h4>{{playlist.title}}</h4>
		{% for item in playlist.videos %}
		<div class='row'>
			<div class="col-md-6">
				<a href="/playlist/{{playlist.id}}?videoId={{item.id}}">
					<img width="100%" class="thumbnail" src="{{item.thumbnail}}" alt="{{item.title}}"/>
				</a>
			</div>
			<div class="col-md-6">{{item.title}}</div>
			<div>&nbsp;</div>
		</div>
		{% endfor %}
	</aside>
</section>
{% endblock %}
