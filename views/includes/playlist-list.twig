{% if playlists %}
	{% for page in paginate(playlists,row_length||6) %}
	<section class="row">
		{%for playlist in page %}
		<article class="col-md-3 video">
			<a title="{{playlist.title}}" href="/playlist/{{playlist.id}}"><img class="thumb" src="{{playlist.thumbnail}}" alt="{{playlist.title}}"></a>
			<div class="info">
				<span><a title="{{playlist.title}}" href="/playlist/{{playlist.id}}">{{playlist.title.slice(0,49)}}...</a></span>
				<br>
				<span class="owner">
					{% if playlist.owner %}
					{{playlist.owner.username}}
					{%else%}
					anonymous
					{% endif %}
				</span>
			</div>
			<div>&nbsp;</div>
		</article>
		{% endfor %}
	</section>
	{% endfor %}
{% else %}
<h3>No playlist found.</h3>
{% endif %}